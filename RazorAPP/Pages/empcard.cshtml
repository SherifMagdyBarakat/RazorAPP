@model RazorAPP.Models.Employee
<td>
    <div class="row justify-content-center m-3">
        <div class="col-sm-8">
            <div class="card" style="width: 400px;">
                <div class="card-header">
                    <h1>@Model.Name</h1>
                </div>

                <div class="card-body text-center">
                    <img class="card-img-top" src="data:image;base64,@System.Convert.ToBase64String(Model.photo)" width="120" height="80" />
                    <h4>Employee ID : @Model.Id</h4>
                    <h4>Email : @Model.Email</h4>
                    <h4>Department : @Model.Department</h4>
                </div>
                <div class="card-footer text-center">
                    <a class="btn btn-primary" asp-page="CURD/update" asp-route-id="@Model.Id">Edit</a>
                    <a class="btn btn-primary" asp-page="CURD/details" asp-route-id="@Model.Id">Details</a>
                    <a class="btn btn-danger" asp-page="CURD/delete" asp-route-id="@Model.Id">Delete</a>

                </div>
            </div>
        </div>
    </div>
